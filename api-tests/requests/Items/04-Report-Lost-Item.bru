meta {
  name: TC-ITEM-006 Report Lost Item
  type: http
  seq: 4
}

post {
  url: {{base_url}}/api/{{api_version}}/items/lost
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "title": "iPhone 13 Pro",
    "category_id": "{{category_id}}",
    "description": "Black iPhone with cracked screen protector",
    "location_last_seen": "Kantin FTI",
    "date_lost": "2023-11-20",
    "image_url": "http://example.com/iphone.jpg",
    "urgency": "HIGH",
    "offer_reward": true,
    "show_phone": false,
    "contacts": [
      {
        "platform": "INSTAGRAM",
        "value": "@wildanahmad"
      }
    ]
  }
}

tests {
  test("Status is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Urgency is HIGH", function() {
    expect(res.body.urgency).to.equal("HIGH");
  });
  
  if (res.body.id) {
    bru.setEnvVar("lost_item_id", res.body.id);
  }
}
